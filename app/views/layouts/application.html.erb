<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if request.path.start_with?('/users') %>
      <p><%= link_to t('views.common.title_index', name: Book.model_name.human), books_path %></p>
    <% end %>
    <% if user_signed_in? %>
      <p><%= User.model_name.human %>: <%= current_user.email %></p>
      <%= button_to t('views.common.logout'), destroy_user_session_path, method: :delete %>
      <%= link_to t('views.common.title_index', name: i18n_pluralize(User.model_name.human)), users_path %>
      <%= link_to t('views.common.show_me', name: User.human_attribute_name(:profile)), user_path(current_user) %>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
